{{!-- My Page: Dashboard in which Registered Users
can view posts and messages received from prospective buyers.
Author(s): Amir Modan --}}

<div class="container col-8">
    <ul class="nav nav-tabs justify-content-left d-flex" id="dashboard" role="tablist">
        <li class="nav-item">
            <a class="nav-link text-dark me-1 {{#if messagesActive}} active fw-bold {{/if}} {{#if postsActive}} bg-gray-300 {{/if}}"
            id="messages-tab" data-toggle="tab" href="/myMessages" role="tab" aria-controls="messages"
            aria-selected="false">Messages</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark {{#if postsActive}} active fw-bold {{/if}} {{#if messagesActive}} bg-gray-300 {{/if}}"
            id="posts-tab" data-toggle="tab" href="/myPosts" vrole="tab" aria-controls="posts"
            aria-selected="true">Posts</a>
        </li>
    </ul>

    <div class="tab-content bg-white px-5" id="myTabContent">
        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts">
            <main class="container bg-white p-4">
                {{#if messagesActive}}
                    {{> myMessages}}
                {{/if}}
                {{#if postsActive}}
                    {{> myPosts}}
                {{/if}}
            </main>
        </div>
        <div class="tab-pane fade" id="messages" role="tabpanel" aria-labelledby="messages-tab">...</div>
    </div>

</div>
