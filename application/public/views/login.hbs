{{!-- Login Page: Users who have already registered with
Gator Express can login here.
Author(s): Amir Modan --}}

<main class="container col-md-4 form-signin border border-dark pt-1">
    <!-- Form -->
    <form class="m-2" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
        <div class="border-bottom mb-3 border-dark">
            <h3 class="mb-3 fw-normal">Log In</h3>
        </div>

        <!-- Username -->
        <div class="form-floating ">
            <input name="username" type="username" class="form-control" id="floatingInput" placeholder="Username">
            <label for="floatingInput">Username *</label>
        </div>

        <!-- Password -->
        <div class="form-floating">
            <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password *</label>
        </div>

        <!-- SignIn Button -->
        <button class="btn btn-lg btn-primary mt-3" type="submit">Log in</button>

        <!-- Password Retrieval -->
        <a href="#" class="mt-3 fw-normal d-flex">Forgot Password?</a>

        <div class="border-bottom mb-3 border-dark">
            <p class="d-flex justify-content-end text-muted">* Required Fields</p>
        </div>

        <!-- SignUp for New Users -->
        <p>Don't have an account? <a href="/registration">Register now!</a></p>

    </form>
</main>
