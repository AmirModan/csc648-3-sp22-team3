Author(s): Brian Cheng --}}

<div class="container">
    <div class="row justify-content-center">
        <div id="form-content" class="col-lg-8 col-md-10 col-11 border bg-light p-4">
            <form id="post-form" method="POST" action="/products/upload" enctype="multipart/form-data">
                <legend class="m-3"><strong><u>Post Your Item</u></strong></legend>
                {{!-- Fields --}}
                <div class="row justify-content-center">
                    <div id="field-column" class="col-lg-6 col-10">
                        {{!-- Title --}}
                        <div class="form-group mb-3">
                            <label class="mb-1" for="productTitle">Title*</label>
                            <input id="product-title" class="form-control" name="productTitle" type="text">
                        </div>

                        <div class="row justify-content-between">
                            {{!-- Category --}}
                            <div class="form-group col-6">
                                <label class="mb-1" for="productCategory">Category*</label>
                                <select id="product-category" class="form-select text-start"
                                    name="productCategory">
                                    <option>Select:</option>
                                    {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            {{!-- Price --}}
                            <div class="form-group col-xl-5 col-lg-6 col-sm-5 col-6">
                                <label class="mb-1" for="productPrice">Price*</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">$</span>
                                    <input id="product-price" class="form-control text-center" name="productPrice"
                                        type="number" step="0.01" placeholder="00.00">
                                </div>
                            </div>

                        </div>

                        {{!-- Description --}}
                        <div class="form-group mb-3">
                            <label class="mb-1" for="productDesc">Description*</label>
                            <textarea id="product-desc" class="form-control" name="productDesc" type="text"
                                rows="3"></textarea>
                        </div>

                        {{!-- Upload --}}
                        <div class="row mb-3">
                            <div class="col-12">
                                <input id="product-img"class="form-control" name="imgUpload" type="file" 
                                    accept="image/*">
                            </div>
                        </div>

                        {{!-- Submit --}}
                        <div class="d-flex justify-content-end mb-1">
                            <button id="cancel-button" class="btn btn-gray-300 me-2" type="button">Cancel</a>                
                            <button id="post-item-btn" class="btn btn-primary">Post Item</button>
                        </div>
                    </div>

                    {{!-- Notes --}}
                    <div id="notes-column" class="col-lg-5 col-10 mt-2">
                        <p><em>Note: Posts may take up to 24 hours for approval</em></p>
                        <p><em>* Required Fields</em></p>
                        <p class="text-danger"> </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="../js/postFrontEnd.js"></script>